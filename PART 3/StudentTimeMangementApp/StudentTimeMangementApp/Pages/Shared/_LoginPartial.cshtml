@using Microsoft.AspNetCore.Identity
@using StudentTimeMangementApp.Areas.Identity.Data

@inject SignInManager<RegistrationLoginUser> SignInManager
@inject UserManager<RegistrationLoginUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
    var firstName = user?.Firstname;
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @firstName!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
       @*  <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Display/ViewValues">Display Values</a>
        </li> *@

    }
</ul>
